@page
@model SparkAuto.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 class="text-info pt-2 pb-3">Delete User</h2>
<div class="white-background row border">
    <div class="col-8">
        <form method="post">

            @Html.HiddenFor(m => m.ApplicationUser.Id)
            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="ApplicationUser.Name"></label>
                </div>

                <div class="col-8">
                    <input asp-for="ApplicationUser.Name" class="form-control" readonly />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="ApplicationUser.Email"></label>
                </div>

                <div class="col-8">
                    <input asp-for="ApplicationUser.Email" class="form-control" readonly />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="ApplicationUser.City"></label>
                </div>

                <div class="col-8">
                    <input asp-for="ApplicationUser.City" class="form-control" readonly />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="ApplicationUser.Address"></label>
                </div>

                <div class="col-8">
                    <input asp-for="ApplicationUser.Address" class="form-control" readonly />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="ApplicationUser.PostalCode"></label>
                </div>

                <div class="col-8">
                    <input asp-for="ApplicationUser.PostalCode" class="form-control" readonly />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="ApplicationUser.PhoneNumber"></label>
                </div>

                <div class="col-8">
                    <input asp-for="ApplicationUser.PhoneNumber" class="form-control" readonly />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-4">
                </div>

                <div class="col-8">
                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-danger form-control">Delete</button>
                        </div>
                        <div class="col-6">
                            <a asp-page="Index" class="btn btn-success form-control">Back to list</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>